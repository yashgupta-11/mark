{
  "name": "mark",
  "version": "0.9.1",
  "description": "Minimal tasks. Maximum focus.",
  "main": "main.js",
  "author": "Mark <me@yashgupta.in>",
  "license": "Commercial",
  "homepage": "https://yashgupta3.gumroad.com/l/mark",
  "repository": {
    "type": "git",
    "url": "https://github.com/yashgupta/mark.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-dmg": "electron-builder --mac --publish=never",
    "build-arm64": "electron-builder --mac --arm64 --publish=never",
    "build-x64": "electron-builder --mac --x64 --publish=never",
    "dist": "npm run build-dmg",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "menubar",
    "todo",
    "tasks",
    "macos",
    "productivity",
    "transparent",
    "minimalist",
    "focus"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "menubar": "^9.3.0"
  },
  "build": {
    "appId": "com.yashgupta.mark",
    "productName": "Mark",
    "copyright": "Copyright Â© 2025 Mark",
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*",
      "node_modules/menubar/**/*",
      "node_modules/electron-updater/**/*",
      "!node_modules/**/node_modules/**/*",
      "!node_modules/**/{README,readme}*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/test/**/*",
      "!node_modules/**/tests/**/*",
      "!node_modules/**/spec/**/*",
      "!node_modules/**/example/**/*",
      "!node_modules/**/examples/**/*",
      "!node_modules/**/docs/**/*",
      "!node_modules/**/doc/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/*.map",
      "!node_modules/**/*.ts",
      "!node_modules/**/.github/**/*",
      "!node_modules/**/coverage/**/*",
      "!**/node_modules/**/man/**/*",
      "!**/node_modules/**/.*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "minimumSystemVersion": "10.14.0",
      "artifactName": "Mark-${arch}.${ext}",
      "gatekeeperAssess": false,
      "hardenedRuntime": false
    },
    "dmg": {
      "title": "Mark",
      "artifactName": "Mark-${arch}.${ext}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "yashgupta-11",
      "repo": "mark"
    }
  }
}
